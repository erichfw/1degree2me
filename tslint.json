{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended"
    ],
    "jsRules": {},
    "rules": {
        "max-line-length": [
            false, 
            {
              "limit": 150, 
              "ignore-pattern": "^import [^,]+ from |^export | implements"
            }
          ],
        "interface-name": [ "never-prefix" ],
        "member-access": [
            false
        ],
        "ordered-imports": [
            false
        ],
        "no-console": [
            false
        ],
        "no-var-requires": false
    },
    "rulesDirectory": []
}